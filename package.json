{
  "name": "fivem-ts-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for TypeScript in FiveM",
  "main": "index.js",
  "scripts": {
    "build": "npm run typecheck && node build/build-bundle.js",
    "typecheck": "tsc --noEmit -p client/tsconfig.json && tsc --noEmit -p server/tsconfig.json",
    "watch": "cross-env IS_WATCH_MODE=1 node build/build-bundle.js"
  },
  "author": "Project Error",
  "license": "MIT",
  "devDependencies": {
    "@citizenfx/client": "^2.0.6063-1",
    "@citizenfx/server": "^2.0.6063-1",
    "@types/node": "^16.18.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.15",
    "typescript": "^4.5.2"
  }
}
